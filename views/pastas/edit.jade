extends ../layout

block content
  h1= title
  include ../messages.jade
  form(method='POST', action=action, role='form')

    div.form-group
      label Title
        input.form-control(name='pasta[title]', value=pasta.title)
    div.form-group
      label Code
        textarea.code-input.form-control(name='pasta[code]')
          = pasta.code
    div.form-group
      select(name='pasta[private]')
        option(selected=pasta.private === 'true', value='true') Private
        option(selected=pasta.private !== 'true', value='false') Public
          
    button.btn.btn-primary(type='submit') Save
