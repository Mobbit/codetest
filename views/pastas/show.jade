extends ../layout

block content
  h1= title
  p
    strong= pasta.private === 'true' ? 'Private' : 'Public'

  pre
    code= pasta.code

  if (locals.user && user.id == pasta.user_id)
    div.btn-group
      a.edit(href='/pastas/' + pasta.id + '/edit') Edit
      form.delete(method='POST', action='/pastas/' + pasta.id + '?_method=DELETE')
        button.btn.btn-danger(type='submit') Delete
